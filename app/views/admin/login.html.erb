<div class="admin-login-bg">
	<div class="admin-login-card">
		<div class="text-white">
			<h1 class="mb-4 text-warning">Admin login</h1>
			<%= form_with do |form| %>
			  <div class="field mb-4">
			    <% form.label :name %>
			    <%= form.text_field :name,class:"form-control",placeholder:"Email" %>
			  </div>
			  <div class="field mb-4">
			    <% form.label :password %>
			    <%= form.password_field :password,class:"form-control",placeholder:"Password" %>
			  </div>
			  <div class="actions mb-4">
			    <%= form.submit :login,class:"btn btn-outline-info"%>
			  </div>
			<% end %>
		</div>
		
	</div>
</div>





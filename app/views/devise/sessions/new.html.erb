
<div class="devise-bg">
  <div class="devise-card">
   <div class="text-white p-2">
    <h2 class="mb-4 text-warning">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group mb-4">

        <%= f.email_field :email,class:"form-control",placeholder:"Email" ,autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form-group mb-2">

        <%= f.password_field :password,class:"form-control",placeholder:"password", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-group mb-4">
          <%= f.check_box :remember_me,class: "form-check-input"%>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-4">
        <%= f.submit "Log in",class: "btn btn-outline-secondary btn-sm" %>
      </div>
    <% end %>

  <%= render "devise/shared/links" %>
</div>
 
  </div>
</div>

